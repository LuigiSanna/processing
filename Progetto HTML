<html><body><pre>
<span style="color: #666666;">//Programma&nbsp;di&nbsp;un&nbsp;orologio,&nbsp;realizzato&nbsp;da&nbsp;Luigi&nbsp;Sanna</span>

<span style="color: #666666;">//Sfondo&nbsp;e&nbsp;propriet&#224;</span>
<span style="color: #33997E;">void</span> <span style="color: #006699;"><b>setup</b></span>() {
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">size</span>(500, 500);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">background</span>(#CC5E1F); <span style="color: #666666;">//ho specificato il colore di sfondo anche su setup perch&#232;, graficamente, l&apos;avvio mi &#232; sembrato pi&#249; fluido.</span>
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">smooth</span>();
&nbsp;}
<span style="color: #666666;">//Meccanica&nbsp;dell&apos;orologio</span>
&nbsp;<span style="color: #33997E;">void</span> <span style="color: #006699;"><b>draw</b></span>() {
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">pushMatrix</span>();
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">background</span>(#CC5E1F);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">translate</span>(250, 250);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">rotate</span>(<span style="color: #006699;">radians</span>(-90));
&nbsp;&nbsp;&nbsp;
&nbsp;&nbsp;&nbsp;<span style="color: #666666;">//Quadrante</span>
&nbsp;&nbsp;&nbsp;push();
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">stroke</span>(#D92416);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">fill</span>(#EBC469);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">strokeWeight</span>(3);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">ellipse</span>(0, 0, 250, 250);
&nbsp;&nbsp;&nbsp;pop();

&nbsp;&nbsp;&nbsp;<span style="color: #666666;">// Variabili temporali</span>
&nbsp;&nbsp;&nbsp;<span style="color: #E2661A;">int</span> secondi = <span style="color: #006699;">second</span>();
&nbsp;&nbsp;&nbsp;<span style="color: #E2661A;">int</span> minuti = <span style="color: #006699;">minute</span>();
&nbsp;&nbsp;&nbsp;<span style="color: #E2661A;">int</span> ore = <span style="color: #006699;">hour</span>();

&nbsp;&nbsp;&nbsp;<span style="color: #666666;">//Lancetta delle ore</span>
&nbsp;&nbsp;&nbsp;push();
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">rotate</span>(<span style="color: #006699;">radians</span>(ore * 30));
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">stroke</span>(#204E80);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">strokeWeight</span>(8);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">line</span>(0, 0, 50, 0);
&nbsp;&nbsp;&nbsp;pop();
&nbsp;&nbsp;&nbsp;
&nbsp;&nbsp;&nbsp;<span style="color: #666666;">//Lancetta dei minuti</span>
&nbsp;&nbsp;&nbsp;push();
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">rotate</span>(<span style="color: #006699;">radians</span>(minuti * 6));
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">stroke</span>(#3075BF);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">strokeWeight</span>(5);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">line</span>(0, 0, 75, 0);
&nbsp;&nbsp;&nbsp;pop();

&nbsp;&nbsp;&nbsp;<span style="color: #666666;">//Lancetta dei secondi</span>
&nbsp;&nbsp;&nbsp;push();
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">rotate</span>(<span style="color: #006699;">radians</span>(secondi * 6));
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">stroke</span>(#409CFF);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">strokeWeight</span>(3);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">line</span>(0, 0, 100, 0);
&nbsp;&nbsp;&nbsp;pop();

&nbsp;&nbsp;&nbsp;<span style="color: #666666;">//Fulcro delle lancette</span>
&nbsp;&nbsp;&nbsp;push();
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">stroke</span>(#D92416);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">strokeWeight</span>(10);
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">point</span>(0, 0);
&nbsp;&nbsp;&nbsp;pop();
&nbsp;&nbsp;&nbsp;
&nbsp;&nbsp;&nbsp;<span style="color: #006699;">popMatrix</span>();
&nbsp;&nbsp;&nbsp;};

